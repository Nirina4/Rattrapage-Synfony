{% extends 'base.html.twig' %}

{% block title %}Détail d'un Utilisateur{% endblock %}

{% block body %}
    <div class="card shadow-sm p-4 mb-4">
        <h2 class="mb-4">Détail de l'utilisateur</h2>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Nom d'utilisateur</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Rôles</th>
                    <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                </tr>
            </tbody>
        </table>
        <div class="mt-4 d-flex gap-2">
            <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">Retour à la gestion des utilisateurs</a>
            <a href="{{ path('home') }}" class="btn btn-outline-primary">Retour à la gestion de projet</a>
        </div>
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary mt-3">Modifier</a>
        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
